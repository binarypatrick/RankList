<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - RankList</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/ranklist.web.styles.css" asp-append-version="true"/>
</head>
<body>
<div>
    <partial name="_ToastBar"/>
</div>
<header>
    <nav>
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index">RankList</a>
            <button class="navbar-toggler" type="button"
                    aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <div class="">
                    <div class="nav-item">
                        <a class="" asp-page="CreateAccount">Sign In</a>
                    </div>
                    
                    <div class="nav-item">
                        <a class="" asp-page="CreateAccount">Create Account</a>
                    </div>
                </div>
            </div>
        </div>
    </nav>
</header>

<main role="main">
    <div class="container">
        @RenderBody()
    </div>
</main>

<footer>
    <div>&copy; 2025 - RankList</div>
</footer>

@await RenderSectionAsync("Scripts", false)
</body>
</html>
